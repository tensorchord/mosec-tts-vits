# syntax=v1


def basic():
    install.cuda(version="11.6.2")
    install.python()
    install.python_packages(requirements="requirements.txt")


def build():
    base(dev=True)
    basic()


def serving():
    basic()
    io.copy("main.py", "/")
    run(["python main.py --dry-run"])
    config.entrypoint(["python", "main.py", "--timeout", "30000"])
